---
import Navigation from "../components/Navigation.astro";
import GalleryImage from "../components/GalleryImage.astro";
import Layout from "../layouts/Layout.astro";

type Image = { name: string; alt: string; isFull?: boolean };

const images: Image[] = [
  { name: "hero.png", alt: "welcome", isFull: true },
  { name: "living-room.avif", alt: "living room 1" },
  { name: "living-room-2.avif", alt: "living room 2" },
  { name: "living-room-3.avif", alt: "living room 3" },
  { name: "living-room-4.avif", alt: "living room 4" },
  { name: "living-room-5.avif", alt: "living room 5" },
  { name: "living-room-6.avif", alt: "living room 6" },
  { name: "living-room-7.avif", alt: "living room 7" },
  { name: "kitchen-1.avif", alt: "kitchen 1" },
  { name: "kitchen-2.avif", alt: "kitchen 2" },
  { name: "kitchen-3.avif", alt: "kitchen 3" },
  { name: "kitchen-4.avif", alt: "kitchen 4" },
  { name: "kitchen-5.avif", alt: "kitchen 5" },
  { name: "kitchen-6.avif", alt: "kitchen 6" },
  { name: "bedroom-1.avif", alt: "bedroom 1" },
  { name: "bedroom-2.avif", alt: "bedroom 2" },
  { name: "beach.webp", alt: "beach" },
];
---

<Layout>
  <Navigation />
  <main class="max-w-7xl mx-auto pt-3 md:pt-8 px-5 pb-16">
    <h1 class="text-center text-2xl md:text-3xl font-bold">Gallery</h1>
    <section
      class="mt-5 flex justify-center flex-wrap gap-4 max-w-[1100px] mx-auto"
    >
      {
        images.map((img) => (
          <GalleryImage
            imagePath={`/src/assets/gallery/${img.name}`}
            altText={img.alt}
            isFull={img.isFull}
          />
        ))
      }
    </section>
  </main>
</Layout>
