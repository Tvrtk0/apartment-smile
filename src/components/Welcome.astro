---
import hero from "../assets/hero.png";
import bedroom1 from "../assets/bedroom-1.avif";
import bedroom2 from "../assets/bedroom-2.avif";
import beach from "../assets/beach.webp";
import Navigation from "../components/Navigation.astro";
import BookButton from "../components/BookButton.astro";
import GoogleMap from "../components/GoogleMap.astro";
---

<Navigation />
<main>
  <section
    class="max-w-7xl mx-auto pt-3 md:pt-8 px-5 lg:pl-10 flex flex-wrap-reverse lg:flex-nowrap justify-center items-center gap-8"
  >
    <div class="flex flex-col gap-2 md:gap-4">
      <h1 class="text-2xl md:text-4xl font-bold">
        Breathe in Croatiaâ€™s Coastal Beauty
      </h1>
      <p>
        Experience ultimate relaxation steps away from the crystal-clear waters
      </p>
      <div class="flex justify-center mt-4">
        <BookButton />
      </div>
    </div>
    <div class="shadow-lg rounded-lg">
      <img
        src={hero.src}
        alt="apartment-smile"
        width="600px"
        fetchpriority="high"
        class="rounded-xl"
      />
    </div>
  </section>
  <section
    class="mt-10 relative bg-linear-to-tr from-sky-100 to-slate-50 min-h-[600px]"
  >
    <div class="hidden md:inline custom-shape-divider">
      <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path
          d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
          class="shape-fill"></path>
      </svg>
    </div>
    <div
      class="pt-8 md:pt-48 pb-8 max-w-8xl mx-auto px-4 flex flex-wrap justify-center gap-4"
    >
      <div class="bg-slate-50 p-4 shadow-2xl rounded-lg">
        <img
          src={bedroom1.src}
          alt="bedroom"
          width="400px"
          class="h-full object-cover"
        />
      </div>
      <div class="bg-slate-50 p-4 shadow-2xl rounded-lg">
        <img
          src={bedroom2.src}
          alt="bedroom-2"
          width="400px"
          class="h-full object-cover"
        />
      </div>
      <div class="bg-slate-50 p-4 shadow-2xl rounded-lg">
        <img
          src={beach.src}
          alt="beach"
          width="400px"
          class="h-full object-cover"
        />
      </div>
    </div>
  </section>
  <section></section>
  <section class="max-w-7xl mx-auto md:py-24">
    <GoogleMap />
  </section>
</main>

<style>
  .custom-shape-divider {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
  }

  .custom-shape-divider svg {
    position: relative;
    display: block;
    width: calc(154% + 1.3px);
    height: 208px;
  }

  .custom-shape-divider .shape-fill {
    fill: oklch(98.4% 0.003 247.858);
  }
</style>
